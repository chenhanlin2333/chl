<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 必须使用此id,drawable为 未选中 状态的图片 -->
    <item
        android:id="@+id/star_hollow"
        android:drawable="@drawable/star_hollow"/>
    <!-- 必须使用此id,drawable为 半选中 状态的图片 -->
    <item
        android:id="@+id/star_half"
        android:drawable="@drawable/star_half"/>
    <!-- 必须使用此id,drawable为 全选中 状态的图片 -->
    <item
        android:id="@+id/star_full"
        android:drawable="@drawable/star_full"/>

</layer-list>