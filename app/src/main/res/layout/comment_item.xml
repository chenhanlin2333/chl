<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="27dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_Image"
        android:src="@drawable/peo_posters"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="8dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <LinearLayout
        android:layout_marginEnd="17dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp">

            <TextView
                android:id="@+id/user_name"
                android:text="掉线"
                android:textSize="15sp"
                android:textColor="#000000"
                android:drawableEnd="@drawable/search"
                android:drawablePadding="4dp"
                android:layout_marginTop="4dp"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@drawable/good"
                android:layout_toLeftOf="@id/goodnum"
                android:layout_centerInParent="true"
                android:layout_marginEnd="7dp"
                android:layout_width="14dp"
                android:layout_height="14dp" />
            <TextView
                android:id="@+id/goodnum"
                android:text="5342"
                android:textColor="#808080"
                android:textSize="13sp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <TextView
            android:id="@+id/comment"
            android:text="马进欠下债务，与远房表弟小兴在底层社会摸爬滚打，习惯性的买彩票，企图一夜暴富，并迎娶自己的同事姗姗。一日，公司全体员工出海团建，途中，马进收到了彩票中头奖的信息，六千万！就在马进狂喜自己翻身的日子终于到来之际，一场突如其来的滔天巨浪打破了一切。苏醒过来的众人发现身处荒岛 ，丧失了一切与外界的联系……"
            android:textSize="14sp"
            android:textColor="#515151"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/comment_date"
            android:text="8月8日"
            android:textColor="#cbcbcc"
            android:layout_marginTop="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>