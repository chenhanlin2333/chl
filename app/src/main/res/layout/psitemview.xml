<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="152dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.chl.myapplication.MyImageView
        android:id="@+id/picture_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:paddingTop="12dp"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/movie_title_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="西红柿首富"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/picture_image"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"/>

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/mrb_star"
        style="@style/MyRatingBar2"
        android:layout_below="@+id/movie_title_Text"
        android:layout_toRightOf="@+id/picture_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="3"
        app:mrb_progressTint="#FFA92E"/>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_title_Text"
        android:layout_toRightOf="@+id/mrb_star"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:text="评分"
        />

    <TextView
        android:id="@+id/director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/picture_image"
        android:layout_below="@+id/mrb_star"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="导演:  "/>

    <TextView
        android:id="@+id/staring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/picture_image"
        android:layout_below="@+id/director"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:text="主演: "
        />

    <TextView
        android:id="@+id/how_many_people_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginRight="20dp"
        android:text=""
        android:textColor="#F00000"
        />



</RelativeLayout>